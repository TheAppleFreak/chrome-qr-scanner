{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "allowJs": false,
        "declaration": false,
        "sourceMap": true,
        "rootDir": "src",
        "moduleResolution": "node",
        "baseUrl": "src",
        "strict": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "preserve",
        "resolveJsonModule": true,
        "paths": {
            "@/*": ["*"],
            "@ts/*": ["ts/*"],
            "@common/*": ["ts/common/*"],
            "@locales/*": ["locales/*"],
            "@static/*": ["static/*"],
            "@styles/*": ["styles/*"]
        }
    }
}