{
    "name": "QR Scanner",
    "manifest_version": 3,
    "offline_enabled": true,
    "action": {
        "default_title": "QR Scanner"
    },
    "background": {
        "service_worker": "background.js"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    },
    "permissions": [
        "activeTab",
        "clipboardWrite",
        "storage"
    ],
    "optional_permissions": [
        "tabs",
        "tabGroups"
    ]
}